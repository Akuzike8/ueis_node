<title>Manage Users - Unified Electronic Identification System</title>


<span id="identity" hidden>2</span>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h5>Manage Users</h5>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <button type="button" class="btn btn-sm btn-outline-secondary">{{name}}</button>
      <button type="button" class="btn btn-sm btn-outline-secondary">{{role}}</button>
    </div>
  </div>
</div>


<!-- Manage Users -->
<div id="manage_users">
  <div class="table-responsive">
    <table class="table table-striped table-sm display nowrap" id="users_table" style="width:100%">
      <tbody>
        {{#each users}}
          <tr>
            <td>{{nid}}</td>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{phone}}</td>
            <td>{{created_at}}</td>
            <td>{{status}}</td>
            <td>
              {{#equals status 'active'}}
                <button class="actionBtn" id="{{nid}}">Block</button>
              {{else}}
                <button class="actionStatus" id="{{nid}}">Activate</button>
              {{/equals}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>


